<% unless @bookings.empty? %>
  <% @bookings.each do |booking| %>
    <p class="mt-3 mb-2">Participant: <%= booking.participant.first_name %><%= booking.participant.last_name %></p>
    <%= link_to "Accept", accept_booking_path(booking), method: :get, class: "btn btn-primary" %>
    <%= link_to "Decline", decline_booking_path(booking), method: :get, class: "btn btn-danger" %>
  <% end %>
<% else %>
  <p>No booking yet</p>
<% end %>
